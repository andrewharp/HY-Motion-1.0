# HY-Motion-1.0 API Dockerfile
# FastAPI service for text-to-animation on Mixamo/ReadyPlayerMe avatars

FROM runpod/pytorch:1.0.2-cu1281-torch280-ubuntu2404

LABEL maintainer="HY-Motion API"
LABEL description="HY-Motion-1.0 Retargeting API for Mixamo/ReadyPlayerMe avatars"

ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PIP_NO_CACHE_DIR=1
ENV PIP_BREAK_SYSTEM_PACKAGES=1

# Set up environment
ENV PYTHONPATH="/app:/app/HY-Motion-1.0:/app/ComfyUI-HyMotion:/app/ComfyUI:${PYTHONPATH}"
ENV CKPTS_DIR=/app/HY-Motion-1.0/ckpts
ENV COMFYUI_PATH=/app/ComfyUI

# Install minimal system dependencies (git-lfs, protobuf, and PyYAML)
RUN apt-get update -qq && apt-get install -y --no-install-recommends \
    git-lfs protobuf-compiler libprotobuf-dev python3-yaml \
    && rm -rf /var/lib/apt/lists/*

# Install Blender
RUN wget -q https://download.blender.org/release/Blender4.0/blender-4.0.2-linux-x64.tar.xz -O /tmp/blender.tar.xz && \
    tar -xf /tmp/blender.tar.xz -C /opt && \
    ln -s /opt/blender-4.0.2-linux-x64/blender /usr/local/bin/blender && \
    ln -s /opt/blender-4.0.2-linux-x64/blender /usr/bin/blender && \
    rm /tmp/blender.tar.xz

# Install Python dependencies
RUN pip install --upgrade pip setuptools wheel

# Install FastAPI and dependencies
RUN pip install --no-cache-dir \
    fastapi uvicorn python-multipart pydantic requests aiohttp openai

# Install HY-Motion dependencies (PyYAML installed via apt)
RUN pip install --no-cache-dir \
    huggingface_hub==0.30.0 torchdiffeq==0.2.5 \
    accelerate==0.30.1 diffusers==0.26.3 transformers==4.53.3 \
    einops==0.8.1 safetensors==0.5.3 scipy>=1.10.0 \
    transforms3d==0.4.2 omegaconf==2.3.0 click==8.1.3

# Install FBX SDK from custom index
RUN pip install --no-cache-dir fbxsdkpy --extra-index-url https://gitlab.inria.fr/api/v4/projects/18692/packages/pypi/simple

# Clone ComfyUI (required for text encoder)
WORKDIR /app
RUN git clone --depth 1 https://github.com/comfyanonymous/ComfyUI.git && \
    cd ComfyUI && \
    pip install --no-cache-dir -r requirements.txt

# Install ComfyUI-HyMotion specific dependencies
RUN pip install --no-cache-dir comfy-kitchen comfy-aimdo

# Clone HY-Motion-1.0 and ComfyUI-HyMotion
RUN git clone https://github.com/Tencent-Hunyuan/HY-Motion-1.0.git && \
    cd HY-Motion-1.0 && git lfs pull || true
RUN git clone https://github.com/jtydhr88/ComfyUI-HY-Motion1.git ComfyUI-HyMotion

# Download HY-Motion-1.0 model checkpoints from HuggingFace
RUN mkdir -p /app/HY-Motion-1.0/ckpts/HY-Motion-1.0 && \
    cd /app/HY-Motion-1.0/ckpts/HY-Motion-1.0 && \
    huggingface-cli download tencent/HY-Motion-1.0 --local-dir . --local-dir-use-symlinks False || \
    echo "Note: Model download may require HuggingFace authentication"

# Copy API files (includes patch script)
COPY api/ /app/api/

# Fix text_encoder meta tensor issue for API use
RUN python3 /app/api/patch_text_encoder.py

# Fix config paths
RUN sed -i 's|mean_std_dir: ./stats/|mean_std_dir: /app/HY-Motion-1.0/stats/|g' \
    /app/HY-Motion-1.0/ckpts/HY-Motion-1.0/config.yml || true

WORKDIR /app

EXPOSE 8000

HEALTHCHECK --interval=30s --timeout=10s --start-period=90s --retries=3 \
    CMD python3 -c "import requests; requests.get('http://localhost:8000/health')" || exit 1

CMD ["python3", "/app/api/api_service.py"]
