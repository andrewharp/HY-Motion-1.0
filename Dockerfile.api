# HY-Motion-1.0 API Dockerfile
# FastAPI service for text-to-animation on Mixamo/ReadyPlayerMe avatars
# Models are BAKED INTO the image (no network volume required)

FROM runpod/pytorch:2.4.0-py3.11-cuda12.4.1-devel-ubuntu22.04

LABEL maintainer="HY-Motion API"
LABEL description="HY-Motion-1.0 Retargeting API with baked-in models"

ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PIP_NO_CACHE_DIR=1
ENV PIP_BREAK_SYSTEM_PACKAGES=1

# Set up environment
ENV PYTHONPATH="/app:/app/HY-Motion-1.0:/app/ComfyUI-HyMotion:/app/ComfyUI:${PYTHONPATH}"
ENV CKPTS_DIR=/app/HY-Motion-1.0/ckpts
ENV COMFYUI_PATH=/app/ComfyUI
ENV USE_HF_MODELS=0  # Use local models
ENV HF_HOME=/app/.cache/huggingface

# Install minimal system dependencies
RUN apt-get update -qq && apt-get install -y --no-install-recommends \
    git-lfs protobuf-compiler libprotobuf-dev python3-yaml \
    libgl1-mesa-glx libxi6 libxrender1 \
    && rm -rf /var/lib/apt/lists/*

# Install Blender
RUN wget -q https://download.blender.org/release/Blender4.0/blender-4.0.2-linux-x64.tar.xz -O /tmp/blender.tar.xz && \
    tar -xf /tmp/blender.tar.xz -C /opt && \
    ln -s /opt/blender-4.0.2-linux-x64/blender /usr/local/bin/blender && \
    ln -s /opt/blender-4.0.2-linux-x64/blender /usr/bin/blender && \
    rm /tmp/blender.tar.xz && \
    blender --version

# Install Python dependencies
RUN pip install --upgrade pip setuptools wheel

# Install FastAPI and dependencies
RUN pip install --no-cache-dir \
    fastapi uvicorn python-multipart pydantic requests aiohttp openai

# Install HY-Motion dependencies
RUN pip install --no-cache-dir \
    huggingface_hub==0.30.0 torchdiffeq==0.2.5 \
    accelerate==0.30.1 diffusers==0.26.3 transformers==4.53.3 \
    einops==0.8.1 safetensors==0.5.3 scipy>=1.10.0 \
    transforms3d==0.4.2 omegaconf==2.3.0 click==8.1.3

# Install FBX SDK from custom index
RUN pip install --no-cache-dir fbxsdkpy --extra-index-url https://gitlab.inria.fr/api/v4/projects/18692/packages/pypi/simple

# Clone ComfyUI (required for text encoder)
WORKDIR /app
RUN git clone --depth 1 https://github.com/comfyanonymous/ComfyUI.git && \
    cd ComfyUI && \
    pip install --no-cache-dir -r requirements.txt

# Install ComfyUI-HyMotion specific dependencies
RUN pip install --no-cache-dir comfy-kitchen comfy-aimdo

# Clone HY-Motion-1.0 (code only)
RUN git clone --depth 1 https://github.com/Tencent-Hunyuan/HY-Motion-1.0.git HY-Motion-1.0-temp && \
    mv HY-Motion-1.0-temp/* HY-Motion-1.0/ 2>/dev/null || true && \
    rm -rf HY-Motion-1.0-temp
RUN git clone --depth 1 https://github.com/jtydhr88/ComfyUI-HY-Motion1.git ComfyUI-HyMotion

# =============================================================================
# COPY MODELS INTO IMAGE (baked in, not network volume)
# =============================================================================
# These are copied from the local ckpts/ directory which should contain:
# - ckpts/tencent/HY-Motion-1.0/ (config.yml, latest.ckpt, latest.pt)
# - ckpts/tencent/HY-Motion-1.0-Lite/ (optional)
# - ckpts/clip-vit-large-patch14/ (CLIP text encoder)
# - ckpts/Qwen3-8B/ (Qwen text encoder)

COPY ckpts/ /app/HY-Motion-1.0/ckpts/

# Verify models are present
RUN echo "=== Verifying model files ===" && \
    ls -lah /app/HY-Motion-1.0/ckpts/ && \
    ls -lah /app/HY-Motion-1.0/ckpts/tencent/HY-Motion-1.0/ && \
    test -f /app/HY-Motion-1.0/ckpts/tencent/HY-Motion-1.0/config.yml && \
    (test -f /app/HY-Motion-1.0/ckpts/tencent/HY-Motion-1.0/latest.ckpt || \
     test -f /app/HY-Motion-1.0/ckpts/tencent/HY-Motion-1.0/latest.pt) && \
    echo "âœ“ Model files verified"

# Copy API files (includes patch script)
COPY api/ /app/api/
COPY hymotion/ /app/hymotion/
COPY stats/ /app/stats/

# Fix text_encoder meta tensor issue for API use
RUN python3 /app/api/patch_text_encoder.py || echo "Patch script completed"

# Fix config paths for container
RUN sed -i 's|mean_std_dir: ./stats/|mean_std_dir: /app/stats/|g' \
    /app/HY-Motion-1.0/ckpts/tencent/HY-Motion-1.0/config.yml && \
    sed -i 's|mean_std_dir: ./stats/|mean_std_dir: /app/stats/|g' \
    /app/HY-Motion-1.0/ckpts/tencent/HY-Motion-1.0-Lite/config.yml 2>/dev/null || true

WORKDIR /app

EXPOSE 8000

HEALTHCHECK --interval=30s --timeout=10s --start-period=120s --retries=3 \
    CMD python3 -c "import requests; requests.get('http://localhost:8000/health', timeout=5)" || exit 1

# Use a startup script that calls the base image's entrypoint and starts our API
COPY api/entrypoint.sh /app/entrypoint.sh
RUN chmod +x /app/entrypoint.sh

ENTRYPOINT ["/app/entrypoint.sh"]
